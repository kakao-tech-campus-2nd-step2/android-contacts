<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/faceIcon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/face"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faceIcon"
        android:layout_above="@+id/buttonContainer">  <!-- 버튼 컨테이너 위에 위치 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameInputForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:background="@color/inputFormBackgroundColor"
                android:hint="이름" />

            <EditText
                android:id="@+id/phoneInputForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:textSize="18sp"
                android:inputType="phone"
                android:background="@color/inputFormBackgroundColor"
                android:hint="전화번호"/>

            <EditText
                android:id="@+id/emailInputForm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:background="@color/inputFormBackgroundColor"
                android:hint="메일"/>

            <LinearLayout
                android:id="@+id/moreButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="더보기"
                    android:textSize="18sp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/moreInformationForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/birthdayInputForm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:background="@color/inputFormBackgroundColor"
                    android:hint="생일"/>

                <LinearLayout
                    android:id="@+id/genderInputForm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:background="@color/inputFormBackgroundColor">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:hint="성별"/>

                    <RadioGroup
                        android:id="@+id/genderRadioGroup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/womanRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="여성"/>

                        <RadioButton
                            android:id="@+id/manRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="남성"/>
                    </RadioGroup>
                </LinearLayout>

                <EditText
                    android:id="@+id/memoInputForm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:inputType="none"
                    android:background="@color/inputFormBackgroundColor"
                    android:hint="메모"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="취소"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="저장"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</RelativeLayout>
