<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_face" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름*"
        android:background="@drawable/inputfield"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:drawableLeft="@drawable/ic_person_resized"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="전화번호*"
        android:background="@drawable/inputfield"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:drawableLeft="@drawable/ic_call_resized"
        android:drawablePadding="8dp"/>


    <EditText
        android:id="@+id/mailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="메일"
        android:background="@drawable/inputfield"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:drawableLeft="@drawable/ic_call_resized"
        android:drawablePadding="8dp"/>

    <!-- 더보기 버튼 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/moreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/keyboard_arrow_down"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- 숨겨진 추가 필드 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/moreFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp" >
<!--        android:visibility="gone"-->

        <EditText
            android:id="@+id/birthdayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="생일"
            android:background="@drawable/inputfield"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_birth_resized"
            android:drawablePadding="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inputfield"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sex" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/inputfield"
                >

                <RadioButton
                    android:id="@+id/femaleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:layout_marginEnd="16dp" />

                <RadioButton
                    android:id="@+id/maleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="남성" />
            </RadioGroup>
        </LinearLayout>


        <EditText
            android:id="@+id/memoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메모"
            android:background="@drawable/inputfield"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_memo_resized"
            android:drawablePadding="8dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- 나머지 공간을 채우는 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <!-- 취소 및 저장 버튼을 아래에 배치 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border_top"
        android:padding="16dp">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:text="취소" />

        <TextView
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:text="저장" />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>
