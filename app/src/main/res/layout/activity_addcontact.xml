<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/account_profile"
        />

    <EditText
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:paddingHorizontal="15dp"
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_rect_bright"
        android:hint="이름"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/header_icon" />
    <EditText
        android:inputType="phone"
        android:autofillHints="phone"
        android:paddingHorizontal="15dp"
        android:id="@+id/input_tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_rect_bright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_name"
        android:layout_marginTop="15dp"
        android:hint="전화번호"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/input_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/round_rect_bright"
        android:hint="메일"
        android:inputType="text|textNoSuggestions"
        android:paddingHorizontal="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_tel" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:layout_margin="5dp"
            android:id="@+id/button_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"
            android:textSize="24dp"
            />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/button_submit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="저장"
            android:textSize="24dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>