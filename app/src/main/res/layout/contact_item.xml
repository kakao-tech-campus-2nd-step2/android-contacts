<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="20dp"
    android:background="@drawable/background_contact_item"
    android:orientation="horizontal"
    android:translationZ="10dp">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circle_icon"
        android:text="권"
        android:textSize="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_inside_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@id/contact_icon"
        app:layout_constraintLeft_toLeftOf="@id/contact_icon"
        app:layout_constraintRight_toRightOf="@id/contact_icon"
        app:layout_constraintTop_toTopOf="@id/contact_icon" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="권성찬"
        android:textSize="24dp"
        app:layout_constraintLeft_toRightOf="@id/contact_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>