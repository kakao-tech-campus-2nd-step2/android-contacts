<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ContactAddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/contactImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_double"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:src="@drawable/contact_main_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/editTextList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_list_height_default"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/contactImage"
                tools:layout_editor_absoluteX="0dp">

                <EditText
                    android:id="@+id/contactName"
                    style="@style/contactElementStyle"
                    android:hint="이름" />

                <EditText
                    android:id="@+id/contactTel"
                    style="@style/contactElementStyle"
                    android:hint="전화번호"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/contactMail"
                    style="@style/contactElementStyle"
                    android:hint="메일" />

                <TextView
                    android:id="@+id/contactBirthDay"
                    style="@style/contactElementStyle"
                    android:hint="생일" />

                <LinearLayout
                    android:id="@+id/contactGender"
                    style="@style/contactElementStyle"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="성별"
                        android:textSize="@dimen/text_size" />

                    <RadioGroup
                        android:id="@+id/genderRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@drawable/edittext_background"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:textSize="@dimen/text_size">

                        <RadioButton
                            android:id="@+id/female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여성" />

                        <RadioButton
                            android:id="@+id/male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/horizontal_margin"
                            android:text="남성" />
                    </RadioGroup>
                </LinearLayout>

                <EditText
                    android:id="@+id/contactMemo"
                    style="@style/contactElementStyle"
                    android:hint="메모" />
            </LinearLayout>


            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/show_more"
                android:gravity="center"
                android:text="더보기"
                android:layout_marginTop="@dimen/margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextList" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/completeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/element_height"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:backgroundTint="@color/backgroundColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/element_height"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:text="저장"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            app:backgroundTint="@color/backgroundColor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


